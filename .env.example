# Phishing Email Detector - Environment Configuration
# Copy this file to .env and fill in your values

# VirusTotal API Key (Optional)
# Get your free API key at: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=

# Server Configuration
PORT=5000
DEBUG=True

# Flask Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(16))")
SECRET_KEY=

# Model Paths (optional - uses defaults if not set)
MODEL_PATH=models/phishing_model.pkl
VECTORIZER_PATH=models/vectorizer.pkl

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
